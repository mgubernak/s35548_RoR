<p id="notice"><%= notice %></p>
<div class="jumbotron">
  <h1>Books</h1>

  <table class="table table-light table-sm">
    <thead>
    <tr>
      <th>Tytul</th>
      <th>Opis</th>
      <th>Autor</th>
      <th>Gatunek</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.author %></td>
        <td><%= book.category %></td>
        <td><%= link_to 'Wyswietl', book, class: "btn btn-primary btn-sm col-sm-12"  %></td>
        <td><%= link_to 'Edytuj', edit_book_path(book), class: "btn btn-primary btn-sm col-sm-12"   %></td>
        <td><%= link_to 'Usun', book, method: :delete, data: { confirm: 'Jestes pewien?' }, class: "btn btn-primary btn-sm col-sm-12"   %></td>
      </tr>
    <% end %>
    </tbody>
  </table>


  <br>

  <%= link_to 'Dodaj ksiazke', new_book_path,class: "btn btn-primary btn-sm col-sm-2" %>

</div>
